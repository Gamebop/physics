{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "types",
        "allowJs": true,
        "checkJs": false,
        "module": "es6",
        "target": "es6",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "typeRoots": [ "./node_modules/@types" ]
    },
    "typedocOptions": {
        "compilerOptions": {
            "allowSyntheticDefaultImports": true,
            "checkJs": false,
            "typeRoots": [ "./node_modules/@types" ]
        },
        "entryPoints": [
            "src/index.mjs",
        ],
        "navigation": {
            "includeCategories": true,
            "includeGroups": true
        },
        "categorizeByGroup": true,
        "excludeNotDocumented": true,
        "excludeNotDocumentedKinds": [
            "Module",
            "Namespace",
            "Enum",
            "Variable",
            "Function",
            "Class",
            // "Interface",
            "Constructor",
            "Property",
            "Method",
            "CallSignature",
            "IndexSignature",
            "ConstructorSignature",
            "Accessor",
            // "GetSignature",
            "SetSignature",
            "TypeAlias",
            "Reference"
        ],
        "plugin": [
            "typedoc-plugin-mdn-links"
        ],
        "githubPages": false,
        "name": "Physics Components",
        "out": "docs",
        "readme": "none",
        "externalSymbolLinkMappings": {
            "playcanvas": {
                "Vec3": "https://api.playcanvas.com/classes/Engine.Vec3.html",
                "Quat": "https://api.playcanvas.com/classes/Engine.Quat.html",
                "Color": "https://api.playcanvas.com/classes/Engine.Color.html",
                "Application": "https://api.playcanvas.com/classes/Engine.Application.html",
                "Entity": "https://api.playcanvas.com/classes/Engine.Entity.html",
                "Curve": "https://api.playcanvas.com/classes/Engine.Curve.html",
                
            },
        },
    },
    "include": [ "src/**/*.mjs" ]
}